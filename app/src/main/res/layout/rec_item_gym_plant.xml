<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    app:cardBackgroundColor="@color/color_orange"
    app:cardCornerRadius="10sp">

    <RelativeLayout
        android:id="@+id/vgRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:background="@drawable/background_button_primary">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTimeOfWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtName"
            android:layout_margin="5sp" />

        <TextView
            android:id="@+id/txtTimeOfRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTimeOfWork"
            android:layout_margin="5sp" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btnDelete"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/txtTimeOfRest"
            android:layout_alignParentEnd="true"
            android:layout_margin="5sp"
            android:background="@drawable/background_button_trans"
            android:src="@drawable/ic_trash"
            app:tint="@color/color_red" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>